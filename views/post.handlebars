<div class="row">
  <div class="small-6 small-centered columns">
    <div class="rank-post">
      <h1 class="post-title">{{post.title}}</h1>
      <div class="post-image">
        <img src="../uploads/{{post.photo}}">
      </div>
      <div class="post-info">
        <div class="post-author">
          <a class="author-thumnail"><img src="../uploads/{{post.user.photo}}" alt="" /></a>
          <span>{{post.user.name}}</span>
        </div>
        <div class="post-date">
          <span data-dates>{{post.created_at}}</span>
        </div>
      </div>

      <div class="post-content">
        <p>{{post.content}}</p>
      </div>
    </div>
  </div>
</div>