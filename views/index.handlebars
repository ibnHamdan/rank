<div class="row">
    {{#each articles}}
    <div class="small-4 columns">
        <div class="card-article-hover card">
            <a href="">
    <img src="https://unsplash.it/600/400">
  </a>
            <div class="card-section">
                <p class="meta-data article-subtext">{{this.created}}</p>
                <a href="">
                    <h3 class="article-title">{{this.subject}}</h3>
                </a>
                <p class="article-desc">{{this.content}}</p>
            </div>
            <div class="card-divider flex-container align-middle">
                <img class="avatar" src="http://placehold.it/50x50" alt="avatar">
                <a href="" class="author">BEAN MCGRUBER</a>
            </div>
            <div class="hover-border">
            </div>
        </div>

    </div>
    {{/each}}
</div>